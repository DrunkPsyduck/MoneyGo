@{
    ViewData["Title"] = "Login Page";
}

<div class="text-center">
    <h1 class="display-4">Iniciar sesión</h1>
    <p>Si no dispone de una cuenta de usuario puede crear una @Html.ActionLink("aquí", "Register", "Home").</p>
    <div>
        <form method="post" class="loginForm">
            <label>Nombre de usuario</label><br />
            <input type="text" name="usuario" class="form-control-sm" />
            <br />
            <label>Contraseña</label><br />
            <input type="password" name="password" class="form-control-sm" />
            <br />
            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
        </form>
    </div>
</div>
